{
  "name": "hapi-boilerplate",
  "version": "1.0.0",
  "description": "A simple boilerplate of hapi",
  "main": "index.js",
  "scripts": {
    "dev": "cross-env NODE_ENV=development nodemon ./app.js",
    "prod": "cross-env NODE_ENV=production pm2 start ./app.js --name app",
    "lint": "standard",
    "sequelize": "sequelize"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/KidneyFlower/hapi-boilerplate.git"
  },
  "keywords": [
    "hapi"
  ],
  "author": "KidneyFlower",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/KidneyFlower/hapi-boilerplate/issues"
  },
  "homepage": "https://github.com/KidneyFlower/hapi-boilerplate#readme",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "standard --fix",
      "git add"
    ]
  },
  "dependencies": {
    "axios": "^0.18.0",
    "boom": "^7.2.0",
    "env2": "^2.2.2",
    "good": "^8.1.1",
    "good-console": "^7.1.0",
    "good-file": "^6.0.1",
    "good-squeeze": "^5.1.0",
    "hapi": "^17.5.4",
    "hapi-auth-jwt2": "^8.1.0",
    "hapi-pagination": "^2.0.1",
    "hapi-router": "^4.0.0",
    "hapi-swagger": "^9.1.1",
    "inert": "^5.1.0",
    "joi": "^13.6.0",
    "jsonwebtoken": "^9.0.0",
    "laabr": "^3.1.6",
    "mysql2": "^1.6.1",
    "sequelize": "^4.38.1",
    "vision": "^5.4.0"
  },
  "devDependencies": {
    "cross-env": "^5.2.0",
    "husky": "^1.0.0-rc.14",
    "lint-staged": "^7.2.2",
    "nodemon": "^1.18.4",
    "pm2": "^3.1.3",
    "sequelize-cli": "^4.1.1",
    "standard": "^12.0.1"
  }
}
