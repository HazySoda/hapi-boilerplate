{
  "name": "hapi-boilerplate",
  "version": "1.0.0",
  "description": "A simple boilerplate of hapi",
  "main": "index.js",
  "scripts": {
    "dev": "cross-env NODE_ENV=development nodemon ./app.js",
    "lint": "standard"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/KidneyFlower/hapi-boilerplate.git"
  },
  "keywords": [
    "hapi"
  ],
  "author": "KidneyFlower",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/KidneyFlower/hapi-boilerplate/issues"
  },
  "homepage": "https://github.com/KidneyFlower/hapi-boilerplate#readme",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "standard --fix",
      "git add"
    ]
  },
  "dependencies": {
    "hapi": "^17.5.4"
  },
  "devDependencies": {
    "cross-env": "^5.2.0",
    "husky": "^1.0.0-rc.14",
    "lint-staged": "^7.2.2",
    "nodemon": "^1.18.4",
    "standard": "^12.0.1"
  }
}
